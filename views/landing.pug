doctype html
html(lang="en")
  include common/header.pug
  +head("starter MVP")
  body
    header
      include common/navbar.pug
      +navbar()
      div.container
        div.row.align-items-center
          div.col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Minimum Viable Landing Page
            p.lead Start collecting leads!
            form(action="/", method="POST")
              div.input-group.mb-3
                input(name="lead_email", type="email", placeholder="Enter your email address").form-control.input-group-append
                div.input-group-append
                  button(type="submit").btn.btn-primary Get Started 
    include common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')

